generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LibraryFolder {
  id           Int          @id @default(autoincrement())
  name         String
  path         String       @unique // Folder name/slug only (e.g., "Ozgrind"), stored under public/screenshots/
  isSelected   Boolean      @default(false)
  customPrompt String?      // Folder-specific AI prompt (instruction part only)
  createdAt    DateTime     @default(now())
  screenshots  Screenshot[]
}

model Screenshot {
  id              Int            @id @default(autoincrement())
  filename        String
  filepath        String         // Relative web path (e.g., "/screenshots/folder/image.png")
  description     String?
  aiSuggestedName String?
  keywords        String? // JSON array: ["keyword1", "keyword2"]
  wpImageUrl      String?        // WordPress media library URL
  wpAttachmentId  Int?           // WordPress attachment ID
  createdAt       DateTime       @default(now())
  apiUsage        ApiUsage[]
  folderId        Int?
  folder          LibraryFolder? @relation(fields: [folderId], references: [id])
}

model ApiUsage {
  id           Int         @id @default(autoincrement())
  model        String
  promptTokens Int
  outputTokens Int
  totalTokens  Int
  inputCost    Float
  outputCost   Float
  totalCost    Float
  screenshotId Int?
  createdAt    DateTime    @default(now())

  screenshot   Screenshot? @relation(fields: [screenshotId], references: [id])
}

model Settings {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime

  sessions      Session[]
  accounts      Account[]

  @@unique([email])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
}
