generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LibraryFolder {
  id           Int          @id @default(autoincrement())
  name         String
  path         String       @unique
  isSelected   Boolean      @default(false)
  customPrompt String?
  createdAt    DateTime     @default(now())
  userId       String?
  User         User?        @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  screenshots  Screenshot[]
}

model Screenshot {
  id              Int            @id @default(autoincrement())
  filename        String
  filepath        String
  description     String?
  aiSuggestedName String?
  keywords        String?
  wpImageUrl      String?
  wpAttachmentId  Int?
  createdAt       DateTime       @default(now())
  folderId        Int?
  userId          String?
  apiUsage        ApiUsage[]
  folder          LibraryFolder? @relation(fields: [folderId], references: [id])
  User            User?          @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model ApiUsage {
  id           Int         @id @default(autoincrement())
  model        String
  promptTokens Int
  outputTokens Int
  totalTokens  Int
  inputCost    Float
  outputCost   Float
  totalCost    Float
  screenshotId Int?
  createdAt    DateTime    @default(now())
  userId       String?
  screenshot   Screenshot? @relation(fields: [screenshotId], references: [id])
  User         User?       @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Settings {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
  userId    String?
  User      User?    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([userId, key])
}

model User {
  id            String          @id
  name          String
  email         String          @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  accounts      Account[]
  ApiUsage      ApiUsage[]
  LibraryFolder LibraryFolder[]
  Screenshot    Screenshot[]
  sessions      Session[]
  Settings      Settings[]
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
}
